.page-container
  .text-header-container
    %h1.text-header
      %span.text-airbnb
        %span Airbnb
        %span 
      %span 世界に一つの家をブッキング。住民気分で街体験。

.page-container
  .search-form
    %form
      .input-wrapper
        .search-form-location
          %label.search-form-label{for: 'search-location'}
            %span 場所
          %input#search-location{placeholder: "行き先、都市、住所"}
        .search-form-dates
          %label.search-form-label{for: 'start-date'}
            %span 日時
          .date-range-picker
            .date-input.date-from
            .date-range-arrow
            .date-input.date-end
            %button
        .search-form-guests
          %label.search-form-label{for: 'how-many-guests'}
            %span ゲスト
          .guest-picker-trigger
            %button
              %span 宿泊1人
        .search-form-submit
          %button.btn{type: 'submit'}
            .submit-text 探す


= render 'footer'
